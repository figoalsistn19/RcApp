<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">
            <ImageView
                android:id="@+id/appliad_foto_company"
                android:layout_width="130dp"
                android:layout_height="130dp"
                tools:src="@drawable/image_replace"
                android:layout_marginEnd="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/item_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Item : blank"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/supplier_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Supplier : blank"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/quantity_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:text="Jumlah Item : "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/expedisi_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:text="Ekspedisi : blank"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/plat_mobil_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginTop="5dp"
                    android:text="Plat Mobil : blank"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/retur_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retur / Exp :"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/no_nota_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. Nota :"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diinput oleh : unidentified"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_regular"
                android:paddingHorizontal="5dp"
                android:layout_marginVertical="2dp"/>
            <TextView
                android:id="@+id/time_input_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:text="10:00 WIB, 23 Feb 2023"
                android:fontFamily="@font/nunito_regular"
                android:paddingHorizontal="5dp"/>
            <TextView
                android:id="@+id/ket_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/nunito_regular"
                android:layout_marginBottom="8dp"
                android:text="Ket : blank"
                android:maxLines="4"
                android:textColor="@color/black"
                android:paddingHorizontal="5dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>